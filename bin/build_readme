#!/usr/bin/env python3
'''Build the README document from a template.

Usage: build_readme INPUT BINDIR OUTPUT

Arguments:

  INPUT   Input file.
  BINDIR  Directory with scripts.
  OUTPUT  Output file.

Examples:

bin/build_readme README.md.in bin README.md
'''

import sys
import os
import ast
import warnings

if __name__ == '__main__':
	if len(sys.argv) != 4:
		sys.stderr.write(sys.modules[__name__].__doc__)
		sys.exit(1)
	input_ = sys.argv[1]
	bindir = sys.argv[2]
	output = sys.argv[3]

	docs = {}
	for name in os.listdir(bindir):
		path = os.path.join(bindir,	name)
		try:
			with open(path) as f:
				try:
					t = ast.parse(f.read())
					docs[name] = \
						'\n```\n' + ast.get_docstring(t, clean=False) + '```\n'
				except Exception as e:
					warnings.warn('%s: %s' % (path, e))
		except IOError as e:
			warnings.warn(e)

	with open(input_) as f:
		out = f.read().format(**docs)

	with open(output, 'w') as f:
		f.write(out)
